	finetune[CurrentInst]-=1
	If finetune[CurrentInst]<8 And switcher=1 Then finetune[CurrentInst]=8
		
	If finetune[CurrentInst]=-1 And switcher=0
	finetune[CurrentInst]=15
	switcher=1
	Endif
	
Endif
