	If ButtonZone_Med(116,146,scl)
		CleanPatterns()' Patterns/song
		speed=6
		songname=""
		songname=FillSpace(songname,19)' Fill _
		ClearChoice=0
	endif
	If ButtonZone_Med(116,157,scl) ' All
		CleanSamples()' Samples
		CleanPatterns()' Patterns/song
		speed=6
		songname=""
		songname=FillSpace(songname,19)' Fill _
		ClearChoice=0
	endif
Endif
